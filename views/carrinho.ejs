<title>Carrinho</title> 
<body>
    <%- include('../views/components/header/headerCliente') %>
    <div class="container">
        <div>
            <h1>Meu carrinho</h1>
            <% if (carrinhoItems && carrinhoItems.length > 0) { %>
                <ul>
                    <% carrinhoItems.forEach(item => { %>
                        <li>
                            <p>Produto: <%= item.Produto ? item.Produto.name : 'Nome do Produto não encontrado' %></p>
                            <p>Quantidade: <%= item.quantidade %></p>
                            <p>Preço: R$<%= item.preco %></p>
                            <form class="deleteForm" data-item-id="<%= item.id %>">
                                <button type="submit">Excluir</button>
                            </form>
                        </li>
                    <% }); %>
                    <form action="/carrinho/enviar-pedido" method="POST">
                        <button type="submit">Enviar Pedido</button>
                    </form>
                </ul>
            <% } else { %>
                <p>Nenhum item no carrinho.</p>
            <% } %>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.deleteForm').forEach(form => {
                form.addEventListener('submit', async function(event) {
                    event.preventDefault();

                    const itemId = this.getAttribute('data-item-id');

                    try {
                        const response = await axios.post(`/carrinho/delete/${itemId}`, {});

                        if (response.status === 200) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Sucesso',
                                text: 'Item deletado com sucesso.',
                            }).then(() => {
                                // Recarregar a página para refletir a exclusão
                                window.location.reload();
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Erro',
                                text: 'Erro ao deletar item.',
                            });
                        }
                    } catch (error) {
                        console.error('Erro ao deletar item:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Erro',
                            text: 'Erro ao deletar item.',
                        });
                    }
                });
            });
        });
    </script>
</body>
</html>
